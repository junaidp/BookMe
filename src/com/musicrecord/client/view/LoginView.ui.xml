<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			 xmlns:d="urn:import:gwt.material.design.client.ui"
			 xmlns:v="urn:import:com.musicrecord.client.view">
	
	<ui:style>
	
	.important {
		font-weight: bold;
	}
	
	</ui:style>
	
    <d:MaterialContainer>
   	
		<d:MaterialPanel class="header">
			<!-- <g:Label text="APPLICATION NAME " styleName="heading" /> -->
		</d:MaterialPanel>

		<d:MaterialPanel ui:field="loginArea" class="shadowDiv">

			<d:MaterialPanel  width="500px">

 				<d:MaterialPanel>
 				 	<d:MaterialLabel text="Sign in"  styleName="w3-panel w3-blue header" />
 				</d:MaterialPanel>
 
 				<d:MaterialPanel>
					<d:MaterialLabel ui:field="lblError" styleName="w3-text-red" width="279px"/>
				</d:MaterialPanel>
				
				<d:MaterialPanel>
					<d:MaterialTextBox ui:field="txtUserName" width="250px" title="Enter Username"></d:MaterialTextBox>
				</d:MaterialPanel>
				
				<d:MaterialPanel>
					<d:MaterialTextBox ui:field="txtPassword" width="250px" title="Enter Password"></d:MaterialTextBox>
					
				</d:MaterialPanel>
				
				<d:MaterialPanel style="padding-left:80px;padding-top:10px">
					<d:MaterialButton ui:field="btnSubmit" text="Sign In" styleName="w3-button w3-blue" width="90px" height="35px"/>
				</d:MaterialPanel>

			</d:MaterialPanel>	
		
		</d:MaterialPanel>	
		
		<!-- FOOTER CODE HERE -->
		<v:Footer>	</v:Footer>

	</d:MaterialContainer>
	

	
	
</ui:UiBinder> 