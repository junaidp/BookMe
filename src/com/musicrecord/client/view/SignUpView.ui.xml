<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	 xmlns:m="urn:import:gwt.material.design.client.ui"
	 xmlns:m.addins="urn:import:gwt.material.design.addins.client">
	<ui:style>
	.panel {
		  background:
			url("http://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
		  background-size: 100%;
		  padding: 0px !important;
		  padding-top: 40% !important;
		  width: 800px;
	}
	
	.fieldPanel {
		  background: white;
		  padding: 6%;
		width: 800px;
	}
	
	.imgProfile {
		  margin-top: -120px;
		  width: 40%;
		  margin-left: 30%;
		  border: 5px solid #fff;
		
	}
	
	.rowAction {
		  margin-top: 20px;
	}
	
	.login_demo {
		  padding: 5%;
		width: 800px;
	}
	</ui:style>
	<g:HTMLPanel>
	<m:MaterialRow  title="SignUp" backgroundColor="GREY_LIGHTEN_4" addStyleNames="{style.login_demo}"  >
	<m:MaterialColumn grid="s12 m8 l6" offset="l4"> 
	<m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
	<m:MaterialPanel addStyleNames="{style.fieldPanel}">
	<m:MaterialLabel ui:field="lblError" styleName="w3-text-red" width="279px"/>
	<m:MaterialTextBox label="Email or Username" iconType="ACCOUNT_CIRCLE"  ui:field="email"/>
	<m:MaterialTextBox type="PASSWORD" placeholder="Password" width="100%" ui:field="password" />
	<m:MaterialTextBox type="PASSWORD" placeholder="Re-Password" width="100%" ui:field="rePassword" />
	 
	<m:MaterialButton ui:field="btnSignUp" waves="LIGHT" text="Sign Up" width="100%"/>
	
	
	</m:MaterialPanel>
	</m:MaterialPanel>
	</m:MaterialColumn>
	</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 